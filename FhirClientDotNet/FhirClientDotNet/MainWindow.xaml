<Window x:Class="WpfOidcClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="700" Width="700">
    <Canvas>
        <Button x:Name="button" Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Canvas.Left="10" Canvas.Top="10" Click="LoginButton_Click"/>
        <TextBox x:Name="IdentityTextBox" Height="614" Canvas.Left="10" TextWrapping="Wrap" Text="TextBox" Canvas.Top="48" Width="675" ScrollViewer.VerticalScrollBarVisibility="Auto" />
        <Button x:Name="button_get_patient" Content="Get Patient" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Canvas.Left="126" Canvas.Top="10" IsEnabled="False" Click="GetPatientButton_Click"/>
    </Canvas>

</Window>